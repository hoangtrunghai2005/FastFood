@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="login-page">
    <div class="login-card">
        <div class="card-body">
            <h3 class="text-center text-success mb-4">Tạo tài khoản mới</h3>
            <form method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email">
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Mật khẩu">
                    <label asp-for="Input.Password">Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu">
                    <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>
                <button type="submit" class="btn btn-success w-100 py-2">Đăng Ký</button>
            </form>
            <hr class="mt-4">
            <p class="text-center mb-0">
                Đã có tài khoản?
                <a asp-page="/Account/Login" class="text-decoration-none text-primary">Đăng nhập tại đây</a>
            </p>
        </div>
    </div>
</div>
